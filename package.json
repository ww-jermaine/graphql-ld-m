{
    "name": "graphql-ld-m",
    "version": "1.0.0",
    "description": "GraphQL-LD client with mutation support",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "docs": "typedoc --out docs src",
        "clean": "rimraf dist coverage docs",
        "prepare": "husky install",
        "precommit": "lint-staged",
        "start": "ts-node src/index.ts",
        "dev": "nodemon --exec ts-node src/index.ts",
        "security": "npm audit && snyk test"
    },
    "keywords": [
        "graphql",
        "linked-data",
        "sparql",
        "rdf",
        "json-ld"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.12.2",
        "@rdfjs/types": "^1.1.0",
        "graphql": "^16.6.0",
        "graphql-to-sparql": "^2.3.0",
        "jsonld-context-parser": "^2.1.5",
        "rdf-data-factory": "^1.1.1",
        "sparqlalgebrajs": "^4.0.5",
        "sparqljson-to-tree": "^2.1.0"
    },
    "overrides": {
        "graphql": "^16.6.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "@types/node-fetch": "^2.6.12",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "node-fetch": "^3.3.2",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "snyk": "^1.1283.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.25.9",
        "typescript": "^5.3.3"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src",
            "<rootDir>/test"
        ],
        "testMatch": [
            "**/test/**/*-test.ts",
            "**/test/**/*-error.ts",
            "**/test/**/*-security-test.ts",
            "**/test/**/*-network-test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/types/**/*.ts",
            "!src/**/index.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": "80",
                "functions": "90",
                "lines": "90",
                "statements": "90"
            }
        }
    }
}
